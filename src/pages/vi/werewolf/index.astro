---
import { GameScreen } from "@/modules/werewolf/components/GameScreen";
import Layout from "@/layouts/main.astro";
import { getLangFromUrl } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
---

<Layout title="Werewolf - Game Master">
  <div
    class="fixed inset-0 bg-background bg-[radial-gradient(circle_at_center,var(--tw-gradient-stops))] from-indigo-900/10 via-background to-background -z-10"
  >
  </div>
  <GameScreen client:only="react" lang={lang} />
</Layout>

<style>
  main {
    background: radial-gradient(
      circle at 50% 0%,
      rgba(var(--accent-rgb), 0.15) 0%,
      transparent 60%
    );
  }
</style>
