---
import Layout from "@/layouts/main.astro";
import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Book, Play, Settings, Users } from "lucide-react";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const werewolfPath = `/${lang}/werewolf`;
const rolesPath = `/${lang}/werewolf/roles`;
---

<Layout title={t("app.title") + " - " + t("app.subtitle")}>
  <main
    class="relative flex flex-col items-center justify-center p-4 sm:p-6 bg-background overflow-hidden"
  >
    <!-- Background Decor -->
    <div
      class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-7xl aspect-square bg-[radial-gradient(circle_at_center,oklch(0.55_0.25_264/0.15),transparent_70%)] -z-10"
    >
    </div>

    <div class="max-w-4xl w-full flex flex-col gap-12 sm:gap-16 pt-12 sm:pt-0">
      <div class="text-center space-y-4 px-4">
        <h1
          class="text-5xl sm:text-7xl md:text-8xl font-black tracking-tight bg-linear-to-b from-foreground via-foreground to-primary/40 bg-clip-text text-transparent italic underline decoration-primary/30 decoration-8"
        >
          {t("app.title")}
        </h1>
        <p
          class="text-lg sm:text-xl md:text-2xl text-muted-foreground font-medium uppercase tracking-[0.2em]"
        >
          {t("app.subtitle")}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6 px-4">
        <a href={werewolfPath} class="group">
          <Card
            className="h-full border-2 transition-all hover:border-primary active:scale-[0.98] overflow-hidden bg-card/40 backdrop-blur-md shadow-lg hover:shadow-primary/10"
          >
            <CardContent className="p-6 sm:p-8 flex flex-col gap-4 sm:gap-6">
              <div
                class="w-16 h-16 sm:w-20 sm:h-20 rounded-2xl sm:rounded-3xl bg-primary/10 flex items-center justify-center group-hover:bg-primary group-hover:text-primary-foreground transition-all duration-300 shadow-inner group-hover:shadow-primary/50 group-hover:shadow-2xl"
              >
                <Play className="w-8 h-8 sm:w-10 sm:h-10 fill-current" />
              </div>
              <div>
                <h2 class="text-3xl sm:text-4xl font-bold mb-2">Werewolf</h2>
                <p
                  class="text-muted-foreground text-lg sm:text-xl leading-relaxed"
                >
                  {t("setup.subtitle")}
                </p>
              </div>
              <div class="mt-2 flex gap-2">
                <span
                  class="px-3 py-1 bg-accent/20 text-accent-foreground text-[10px] sm:text-xs font-bold rounded-full uppercase tracking-wider border border-accent/20"
                  >{t("common.ready")}</span
                >
                <span
                  class="px-3 py-1 bg-primary/20 text-primary text-[10px] sm:text-xs font-bold rounded-full uppercase tracking-wider border border-primary/20"
                  >{t("common.premium")}</span
                >
              </div>
            </CardContent>
          </Card>
        </a>

        <Card
          className="opacity-40 border-dashed border-2 bg-muted/10 filter grayscale pointer-events-none sm:pointer-events-auto sm:cursor-not-allowed"
        >
          <CardContent className="p-6 sm:p-8 flex flex-col gap-4 sm:gap-6">
            <div
              class="w-16 h-16 sm:w-20 sm:h-20 rounded-2xl sm:rounded-3xl bg-muted flex items-center justify-center"
            >
              <Settings className="w-8 h-8 sm:w-10 sm:h-10" />
            </div>
            <div>
              <h2 class="text-3xl sm:text-4xl font-bold mb-2">
                {t("common.comingSoon")}
              </h2>
              <p class="text-muted-foreground text-lg sm:text-xl">
                Mafia, Avalon, and Coup modules calling soon.
              </p>
            </div>
          </CardContent>
        </Card>
      </div>

      <div
        class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-8 pb-12"
      >
        <a href={rolesPath} class="w-full sm:w-auto px-4 sm:px-0">
          <Button
            variant="ghost"
            className="w-full sm:w-auto text-lg sm:text-xl font-bold hover:text-primary h-12 sm:h-14"
          >
            <Book className="mr-2 h-5 w-5 sm:h-6 sm:w-6" />
            {t("nav.roles")}
          </Button>
        </a>
        <div class="w-full sm:w-auto px-4 sm:px-0 opacity-50">
          <Button
            variant="ghost"
            className="w-full sm:w-auto text-lg sm:text-xl font-bold hover:text-primary h-12 sm:h-14"
          >
            <Users className="mr-2 h-5 w-5 sm:h-6 sm:w-6" /> Community Scripts
          </Button>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  h1 {
    font-family: "Outfit", sans-serif;
  }
</style>
